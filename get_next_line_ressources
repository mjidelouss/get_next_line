#include <fcntl.h>
#include <stdio.h>

int main ()
{
	int fd = open("get_next_line.c", O_RDWR);
	char *s;
	while ((s = get_next_line(fd)))
		printf("%s", s);
	close(fd);
	return (0);
}

// BONUS PART

#include <stdio.h>
#include <fcntl.h>

int main ()
{
	int fd = open("test.txt", O_RDWR);
	int fd1 = open("test1.txt", O_RDWR);
	int i = 0;

	while(i++ < 10)
	{
		printf("%s", get_next_line(fd));
		printf("%s", get_next_line(fd1));
	}
	return (0);

